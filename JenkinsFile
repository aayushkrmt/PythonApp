pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                // Clone the GitHub repository
                git url: 'https://github.com/aayushkrmt/PythonApp.git', branch: 'main', credentialsId: '418825f6-7273-430d-983a-4740958949de'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Python dependencies using pip
                sh 'pip3 install requests beautifulsoup4'
            }
        }
        
        stage('Run Python Script') {
            steps {
                // Run the Python script
                sh 'python3 code_1.py'
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
