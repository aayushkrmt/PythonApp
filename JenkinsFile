pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                // Clone the GitHub repository
                git url: 'https://github.com/aayushkrmt/PythonApp.git', branch: 'main', credentialsId: '1cdc3b6a-b0d8-4f91-9490-2668cc5251e6'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Python dependencies using pip
                sh 'pip3 install requests beautifulsoup4'
            }
        }
        
        stage('Run Python Script') {
            steps {
                // Run the Python script
                sh 'python3 code_1.py'
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
